<?xml version="1.0" encoding="utf-8"?>
<com.example.acer.kuunyi.viewpods.UserAccountViewPod
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/iv_navigation_background"
        android:layout_width="match_parent"
        android:layout_height="@dimen/navigation_background_height"
        android:scaleType="centerCrop"
        android:src="@drawable/navigation_background"
        android:tint="#6F000000" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_user_picture"
            android:layout_width="@dimen/user_picture_width"
            android:layout_height="@dimen/user_picture_height"
            android:layout_marginLeft="@dimen/margin_medium_2"
            android:layout_marginTop="@dimen/margin_xlarge"
            android:scaleType="centerCrop"
            android:src="@drawable/user_picture" />


        <TextView
            android:id="@+id/tvUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/iv_user_picture"
            android:layout_below="@id/iv_user_picture"
            android:layout_marginTop="@dimen/margin_medium_3"
            android:text="Pyae Phyo Maung"
            android:textColor="@color/white_full"
            android:textSize="@dimen/text_regular" />


        <Button
            android:id="@+id/btn_logout"
            android:background="@color/primary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tvUsername"
            android:layout_alignParentRight="true"
            android:text="Logout"
            android:layout_marginRight="12dp"
            android:textAllCaps="false" />
    </RelativeLayout>
    </com.example.acer.kuunyi.viewpods.UserAccountViewPod>